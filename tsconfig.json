{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  }
}
